<Window x:Class="Clanarine.Unos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Clanarine"
        mc:Ignorable="d"
        Title="Unos" Height="450" Width="800">
    <UniformGrid Columns="2">
        <Label Content="Ime" FontSize="42"/>
        <TextBox Text="{Binding Ime, UpdateSourceTrigger=Explicit}" FontSize="42"/>

        <Label Content="Prezime" FontSize="42"/>
        <TextBox Text="{Binding Prezime, UpdateSourceTrigger=Explicit}" FontSize="42"/>

        <Button Content="OK" Click="Button_Click"/>
        <Button Content="Cancel" Click="Zatvaranje"/>

    </UniformGrid>
</Window>
